<div class="blog-likes view-counter center" data-article-id="{{ article.id }}">
  <button class="like-button">
    <img src="{{ 'icon-thumb-up.svg' | asset_url }}" alt="Like" width="24" height="24">
  </button>
  <span class="like-count">{{ article.metafields.custom.like_count | default: 0 }}</span>
</div>

<script src="{{ 'article-like-counter.js' | asset_url }}" async></script>

{% schema %}
{
  "name": "Blog Like Counter",
  "target": "section",
}
{% endschema %}
