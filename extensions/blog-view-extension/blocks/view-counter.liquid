<div class="view-counter center" data-article-id="{{ article.id }}">
  <img src="{{ 'See.svg' | asset_url }}" alt="Views" width="24" height="24">
  <span>{{ article.metafields.custom.view_count }}</span>
</div>

<script src="{{ 'article-view-counter.js' | asset_url }}" async></script>

{% schema %}
{
  "name": "Blog View Counter",
  "target": "section",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product",
      "autofill": true
    },
    {
      "type": "color",
      "id": "colour",
      "label": "Star Colour",
      "default": "#ff0000"
    }
  ]
}
{% endschema %}
